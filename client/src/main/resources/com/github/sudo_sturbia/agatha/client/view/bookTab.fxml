<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<!-- A tab used to display books that are read from user's library.
     Each read book has a separate tap. -->
<Tab xmlns="http://javafx.com/javafx"
     xmlns:fx="http://javafx.com/fxml"
     fx:controller="com.github.sudo_sturbia.agatha.client.controller.BookController">

    <GridPane hgap="10"
              vgap="10"
              alignment="TOP_CENTER">

        <padding><Insets topRightBottomLeft="40"/></padding>
        <columnConstraints>
            <ColumnConstraints percentWidth="40"/>
            <ColumnConstraints percentWidth="5"/>
            <ColumnConstraints percentWidth="30"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="5"/>
            <RowConstraints percentHeight="5"/>
            <RowConstraints percentHeight="5"/>
            <RowConstraints percentHeight="5"/>
            <RowConstraints percentHeight="5"/>
            <RowConstraints percentHeight="5"/>
            <RowConstraints percentHeight="5"/>
            <RowConstraints percentHeight="5"/>
            <RowConstraints percentHeight="5"/>
        </rowConstraints>

        <!-- Name field. -->
        <GridPane id="book-field"
                  GridPane.rowIndex="1"
                  GridPane.columnIndex="0"
                  alignment="CENTER"
                  vgap="10"
                  hgap="10">

            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="100"/>
            </rowConstraints>

            <Button id="info-button"
                    fx:id="updateName"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"
                    text="Name"/>
            <StackPane GridPane.rowIndex="0"
                       GridPane.columnIndex="1"
                       id="info-box">
                <Label fx:id="nameField"/>
            </StackPane>
        </GridPane>

        <!-- Author field. -->
        <GridPane id="book-field"
                  GridPane.rowIndex="2"
                  GridPane.columnIndex="0"
                  alignment="CENTER"
                  vgap="10"
                  hgap="10">

            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="100"/>
            </rowConstraints>

            <Button id="info-button"
                    fx:id="updateAuthor"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"
                    text="Author"/>
            <StackPane GridPane.rowIndex="0"
                       GridPane.columnIndex="1"
                       id="info-box">
                <Label fx:id="authorField"/>
            </StackPane>
        </GridPane>

        <!-- State field. -->
        <GridPane id="book-field"
                  GridPane.rowIndex="3"
                  GridPane.columnIndex="0"
                  alignment="CENTER"
                  vgap="10"
                  hgap="10">

            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="100"/>
            </rowConstraints>

            <Button id="info-button"
                    fx:id="updateState"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"
                    text="State"/>
            <StackPane GridPane.rowIndex="0"
                       GridPane.columnIndex="1"
                       id="info-box">
                <Label fx:id="stateField"/>
            </StackPane>
        </GridPane>

        <!-- Number of Pages field. -->
        <GridPane id="book-field"
                  GridPane.rowIndex="4"
                  GridPane.columnIndex="0"
                  alignment="CENTER"
                  vgap="10"
                  hgap="10">

            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="100"/>
            </rowConstraints>

            <Button id="info-button"
                    fx:id="updatePages"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"
                    text="Number of Pages"/>
            <StackPane GridPane.rowIndex="0"
                       GridPane.columnIndex="1"
                       id="info-box">
                <Label fx:id="pagesField"/>
            </StackPane>
        </GridPane>

        <!-- Number of Read Pages field. -->
        <GridPane id="book-field"
                  GridPane.rowIndex="5"
                  GridPane.columnIndex="0"
                  alignment="CENTER"
                  vgap="10"
                  hgap="10">

            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="100"/>
            </rowConstraints>

            <Button id="info-button"
                    fx:id="updateReadPages"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"
                    text="Read Pages"/>
            <StackPane GridPane.rowIndex="0"
                       GridPane.columnIndex="1"
                       id="info-box">
                <Label fx:id="readPagesField"/>
            </StackPane>
        </GridPane>

        <!-- Cover image. -->
        <ScrollPane GridPane.rowIndex="0"
                    GridPane.columnIndex="2"
                    GridPane.rowSpan="7"
                    fitToHeight="true"
                    fitToWidth="true">
        </ScrollPane>

        <!-- Note. -->
        <Label GridPane.rowIndex="8"
               GridPane.columnIndex="0"
               text="^^ Click on any field to update it's value."/>
    </GridPane>
</Tab>
